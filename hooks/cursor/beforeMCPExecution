#!/usr/bin/env python3
"""
Cursor beforeMCPExecution hook.
Called before MCP tool execution.
"""

import sys
from pathlib import Path

# Add blueplane to path
sys.path.insert(0, str(Path(__file__).parent.parent.parent / "src"))

from blueplane.capture.cursor_hooks import before_mcp_execution

if __name__ == "__main__":
    before_mcp_execution()

